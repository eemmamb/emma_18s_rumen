singularity exec --nv containers/dorado_v0.9.5.sif dorado \
    basecaller \
    sup \
    --recursive /projects/health_sciences/bms/biochemistry/dearden_lab/sarahinwood/emma-rumen-18s/data/emma_18s_barcoding \
    --kit-name SQK-NBD114-24 \
    > rumen_18s_basecalling/all.bam

singularity exec containers/dorado_v0.9.5.sif dorado \
    demux \
    --output-dir output/02_demuxed \
    --no-classify \
    --threads 50 \
    --emit-fastq \
    output/01_basecalled/all.bam

# Input files
INPUT1="output/02_demuxed/barcode01.fastq"
INPUT2="output/02_demuxed/barcode02.fastq"
INPUT3="output/02_demuxed/barcode03.fastq"
INPUT4="output/02_demuxed/barcode04.fastq"

# Output base
OUTBASE="output/03_nanoplot"
mkdir -p "$OUTBASE"

# Run NanoPlot for each sample with a different line/point color
echo "Running NanoPlot on barcode01"
NanoPlot --fastq "$INPUT1" --outdir "$OUTBASE/sample1" --threads 2 \
  --color "cornflowerblue" --plots hex dot kde --maxlength 2000  --N50 --title "Sample 1" 

echo "Running NanoPlot on barcode02"
NanoPlot --fastq "$INPUT2" --outdir "$OUTBASE/sample2" --threads 2 \
  --color "lightgreen" --plots hex dot kde --maxlength 2000  --N50 --title "Sample 2" 

echo "Running NanoPlot on barcode03"
NanoPlot --fastq "$INPUT3" --outdir "$OUTBASE/sample3" --threads 2 \
  --color "orange" --plots hex dot kde --maxlength 2000  --N50 --title "Sample 3" 

echo "Running NanoPlot on barcode04"
NanoPlot --fastq "$INPUT4" --outdir "$OUTBASE/sample4" --threads 2 \
  --color "hotpink" --plots hex dot kde --maxlength 2000  --N50 --title "Sample 4" 

## all samples together
echo "Running NanoPlot on all samples"
mkdir -p output/03_nanoplot/all_samples
cat "$INPUT1" "$INPUT2" "$INPUT3" "$INPUT4" > output/03_nanoplot/all_samples/all_samples.fastq
NanoPlot --fastq output/03_nanoplot/all_samples/all_samples.fastq --outdir "output/03_nanoplot/all_samples/all_samples" --threads 2 \
  --color "violet" --plots hex dot kde --maxlength 2000  --N50 --title "All Samples" 

echo "NanoPlot runs completed."

# List of files
DEMUXED_FILES=("barcode01.fastq" "barcode02.fastq" "barcode03.fastq" "barcode04.fastq")

## chopper - filter reads based on length and quality
for FILE in "${DEMUXED_FILES[@]}"; do
    BASENAME=$(basename "$FILE" .fastq)
    echo "Chopper filtering $FILE"
    singularity exec containers/chopper_0.1.0.sif \
        /usr/local/bin/chopper \
        --input "$INPUT_DIR/$FILE" \
        --threads 50 \
        --quality 15 \
        --minlength 430 \
        --maxlength 530 \
        > "$OUTPUT_DIR/${BASENAME}_filtered.fastq"
done

FILTERED_FILES=("barcode01_filtered.fastq" "barcode02_filtered.fastq" "barcode03_filtered.fastq" "barcode04_filtered.fastq")

## now trim primer sequence off reads
for FILE in "${FILTERED_FILES[@]}"; do
    BASENAME=$(basename "$FILE" .fastq)
    echo "Chopper cropping primer seq $FILE"
    singularity exec containers/chopper_0.1.0.sif \
        /usr/local/bin/chopper \
        --input "$OUTPUT_DIR/$FILE" \
        --threads 50 \
        --headcrop 20 \
        --tailcrop 19 \
        > "$OUTPUT_DIR/${BASENAME}_cropped.fastq"

# Input files
INPUT1="output/04_chopper/barcode01.fastq"
INPUT2="output/04_chopper/barcode02.fastq"
INPUT3="output/04_chopper/barcode03.fastq"
INPUT4="output/04_chopper/barcode04.fastq"

# Output base
OUTBASE="output/04_chopper/nanoplot_post_chopper"
mkdir -p "$OUTBASE"

# Run NanoPlot for each sample with a different line/point color
echo "Running NanoPlot on barcode01"
NanoPlot --fastq "$INPUT1" --outdir "$OUTBASE/sample1" --threads 2 \
 --color "cornflowerblue" --plots dot kde --N50 --title "Sample 1"

echo "Running NanoPlot on barcode02"
NanoPlot --fastq "$INPUT2" --outdir "$OUTBASE/sample2" --threads 2 \
  --color "lightgreen" --plots dot kde --N50 --title "Sample 2"

echo "Running NanoPlot on barcode03"
NanoPlot --fastq "$INPUT3" --outdir "$OUTBASE/sample3" --threads 2 \
  --color "orange" --plots dot kde --N50 --title "Sample 3"

echo "Running NanoPlot on barcode04"
NanoPlot --fastq "$INPUT4" --outdir "$OUTBASE/sample4" --threads 2 \
  --color "hotpink" --plots dot kde --N50 --title "Sample 4"

# ## all samples together
 echo "Running NanoPlot on all samples together"
 cat "$INPUT1" "$INPUT2" "$INPUT3" "$INPUT4" > "$OUTBASE/all_samples.fastq"
NanoPlot --fastq "$OUTBASE/all_samples.fastq" --outdir "$OUTBASE/all_samples" --threads 2 \
  --color "violet" --plots dot kde --N50 --title "All Samples" 
